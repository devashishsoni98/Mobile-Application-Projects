<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculator"
        android:textSize="24sp"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/resultEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:inputType="none"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:text="0"
        android:gravity="end"
        android:elevation="4dp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="4"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true">

        <!-- Row 1 -->
        <Button android:id="@+id/btn7" style="@style/ButtonStyle" android:text="7"/>
        <Button android:id="@+id/btn8" style="@style/ButtonStyle" android:text="8"/>
        <Button android:id="@+id/btn9" style="@style/ButtonStyle" android:text="9"/>
        <Button android:id="@+id/btnDivide" style="@style/OperatorButtonStyle" android:text="/"/>

        <!-- Row 2 -->
        <Button android:id="@+id/btn4" style="@style/ButtonStyle" android:text="4"/>
        <Button android:id="@+id/btn5" style="@style/ButtonStyle" android:text="5"/>
        <Button android:id="@+id/btn6" style="@style/ButtonStyle" android:text="6"/>
        <Button android:id="@+id/btnMultiply" style="@style/OperatorButtonStyle" android:text="*"/>

        <!-- Row 3 -->
        <Button android:id="@+id/btn1" style="@style/ButtonStyle" android:text="1"/>
        <Button android:id="@+id/btn2" style="@style/ButtonStyle" android:text="2"/>
        <Button android:id="@+id/btn3" style="@style/ButtonStyle" android:text="3"/>
        <Button android:id="@+id/btnMinus" style="@style/OperatorButtonStyle" android:text="-"/>

        <!-- Row 4 -->
        <Button android:id="@+id/btn0" style="@style/ButtonStyle" android:text="0"/>
        <Button android:id="@+id/btnClear" style="@style/SpecialButtonStyle" android:text="C"/>
        <Button android:id="@+id/btnEquals" style="@style/SpecialButtonStyle" android:text="="/>
        <Button android:id="@+id/btnPlus" style="@style/OperatorButtonStyle" android:text="+"/>

    </GridLayout>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#757575"
        android:gravity="end"
        android:layout_marginTop="8dp"
        android:text="Date: 10-Feb-2025"/>

    <TextView
        android:id="@+id/devText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="by - Devashish"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
